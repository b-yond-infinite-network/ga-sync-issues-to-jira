{
  "name": "ga-sync-issues-to-jira",
  "version": "0.2.0",
  "description": "A github Action to synchronize Github Issues to Jira",
  "main": "dist/index.js",
  "scripts": {
    "package": "ncc build src/index.js -o dist",
    "test": "jest --silent",
    "coverage": "codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/b-yond-infinite-network/ga-sync-issues-to-jira"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "author": "GitHub",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/b-yond-infinite-network/ga-sync-issues-to-jira/issues"
  },
  "homepage": "https://github.com/b-yond-infinite-network/ga-sync-issues-to-jira#readme",
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^1.0.0",
    "jira-connector": "^2.16.1",
    "adf-builder": "^3.3.0",
    "lodash": "latest",
    "node-fetch": "^2.6.0",
    "md-to-adf": "^0.5.0"
  },
  "devDependencies": {
    "@aoberoi/capture-console": "^1.1.0",
    "@zeit/ncc": "^0.20.5",
    "auto-jest-cucumber": "^1.2.0",
    "callsites": "^3.1.0",
    "codecov": "^4.0.0-0",
    "deepmerge": "^4.2.2",
    "eslint": "^6.3.0",
    "husky": "^3.0.9",
    "jest-cucumber-fusion": "^0.6.1",
    "jest-mock-console": "^1.0.0",
    "nock": "^11.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && npm run package && git add dist/index.js",
      "pre-push": "npm test"
    }
  },
  "jest": {
    "testMatch": [
      "**/*.steps.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
